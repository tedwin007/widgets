    "test": "nx run widgets:test --with-deps --parallel --skip-nx-cache --codeCoverage=true",
    "test:watch": "nx run widgets:test --with-deps --parallel --skip-nx-cache --watch --codeCoverage=true"
  },
  "dependencies": {
    "ajv": "^6.12.6",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nx/esbuild": "16.7.1",
    "@nx/eslint-plugin": "16.7.1",
    "@nx/jest": "16.7.1",
