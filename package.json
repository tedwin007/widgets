  "scripts": {
    "lint:fix": "nx run widgets:lint --parallel --skip-nx-cache --fix --reportUnusedDisableDirectives=error",
    "start": "nx serve",
    "build": "nx build",
    "build:watch": "nx build",
    "publish": "npm version patch --force && npm pack",
